<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>McMinnville Pallet Co.</title>
    
    <!-- Links to styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/sandstone/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">

</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">McMinnville Pallet Co.</a>
            
            <div class="d-flex align-items-center">
                <% if (user) { %>
                    <!-- Links to other views -->
                    <span class="navbar-text text-light me-3">Welcome, <%= user %></span>
                    <a href="/orders" class="btn btn-secondary btn-sm me-2">Admin Dashboard</a>
                    <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
                <% } else { %>
                    <a class="btn btn-outline-light btn-sm" href="/login">Admin Login</a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Header text -->
    <header class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold">Reliable Pallets. Local Service.</h1>
            <p class="lead">Serving McMinnville, TN with high-quality recycled pallets.</p>

            <!-- Quote link button -->
            <a href="#contact" class="btn btn-success btn-lg mt-3">Get a Quote</a>
        </div>
    </header>

    <div class="container flex-grow-1">
        
        <div class="row mb-4">
            <div class="col-md-12">

                <!-- Pricing link button and form -->
                <h3 class="border-bottom pb-2 mb-4 text-primary">Current Inventory & Pricing</h3>
                
                <form action="/" method="GET" class="row g-3 mb-4">
                    <div class="col-md-10">
                        <input type="text" name="search" class="form-control" placeholder="Search by pallet type (e.g., 'GMA' or 'Euro')...">
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary w-100">Search</button>
                    </div>
                </form>

                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Product Name</th>
                                    <th>Material</th>
                                    <th class="fw-bold text-success">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(Products.length > 0) { %>
                                    <% Products.forEach(P => { %>
                                        <tr>
                                            <td class="ps-4 fw-bold text-dark"><%= P.ProductName %></td>
                                            <td class="text-muted"><%= P.Material %></td>
                                            <td class="fw-bold text-success">$<%= P.Price %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <!-- Message if query didn't find anything -->
                                        <td colspan="3" class="text-center py-4">No products found matching your search.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div id="contact" class="row mt-5 justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow bg-light">
                    <div class="card-body p-5">

                        <!-- Quote form -->
                        <h3 class="text-center mb-4 text-primary">Request a Quote</h3>
                        <p class="text-center text-muted mb-4">Fill out the form below and our team will contact you within 24 hours.</p>
                        
                        <form action="/contact" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Company / Customer Name</label>
                                    <input type="text" name="customerName" class="form-control" placeholder="e.g. Acme Corp" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Service Type</label>
                                    <select name="requestType" class="form-select">
                                        <option>Quote Request</option>
                                        <option>Pickup Request</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label fw-bold">Quantity Needed</label>
                                <input type="number" name="quantity" class="form-control" placeholder="e.g. 50" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 btn-lg">Submit Request</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Links to other views -->
    <footer class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>McMinnville Pallet Co.</h5>
                    <p class="small text-muted">Quality pallets for local businesses.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">Home</a></li>
                        <li><a href="#contact">Contact</a></li>
                        <li><a href="/login">Admin Login</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4">
                    <h5>Contact</h5>
                    <p class="small text-muted">
                        150 N Fair St<br>
                        Morrison, TN 37357<br>
                        (931) 409-0869
                    </p>
                </div>
            </div>
            <!-- Footer for copywright -->
            <hr class="border-secondary mt-4">
            <p class="small text-muted mb-0">&copy; 2025 McMinnville Pallet Co. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>