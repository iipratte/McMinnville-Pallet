<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - McMinnville Pallet Co.</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="header-top">
            <div class="header-contact">
                <div>
                    <span class="admin-badge">ADMIN PANEL</span>
                </div>
                <div class="header-actions">
                    <a href="/" class="btn-header">View Public Site</a>
                    <a href="/logout" class="btn-header btn-danger-header">Logout</a>
                </div>
            </div>
        </div>
        <div class="header-main">
            <a href="/" class="logo">McMinnville Pallet Co.</a>
            <nav>
                <ul>
                    <li><a href="/">Homepage</a></li>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/orders" class="active">Orders</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="main-content">
        <div class="page-header">
            <div>
                <h2>Order Management</h2>
            </div>
            <div class="header-stats">
                <div class="stat-item">
                    <div class="stat-number">24</div>
                    <div class="stat-label">Total Orders</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">18</div>
                    <div class="stat-label">Active</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">6</div>
                    <div class="stat-label">Completed</div>
                </div>
            </div>
        </div>
        
        <div class="table-container">
            <div class="table-header">
                <div class="table-title">All Orders</div>
                <div class="search-box">
                    <input type="text" class="search-input" placeholder="Search orders..." id="searchInput">
                    <button class="btn-search" onclick="filterTable()">Search</button>
                </div>
            </div>
            
            <div style="overflow-x: auto;">
                <table class="custom-table" id="ordersTable">
                    <thead>
                        <tr>
                            <th>Order Number</th>
                            <th>Customer Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                        <tr>
                            <td><span class="order-number">#<%= order.id %></span></td>
                            <td><%= order.customer_name %></td>
                            <td>
                                <span class="badge" 
                                      style="padding: 8px 12px; border-radius: 12px; font-weight: normal; 
                                             background-color: <%= order.status === 'Completed' ? '#198754' : '#ffc107' %>; 
                                             color: <%= order.status === 'Completed' ? 'white' : 'black' %>;">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/editOrder/<%= order.id %>" class="btn-edit">Edit</a>
                                    
                                    <form action="/deleteOrder/<%= order.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete Order #<%= order.id %>?');">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>&copy; 2025 McMinnville Pallet Co. All rights reserved. | Admin Dashboard</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Search Functionality
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('ordersTable');
            const rows = table.getElementsByTagName('tr');
            
            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                let found = false;
                
                // Check all cells in the row for the search text
                for (let j = 0; j < cells.length - 1; j++) {
                    if (cells[j]) {
                        const textValue = cells[j].textContent || cells[j].innerText;
                        if (textValue.toLowerCase().indexOf(filter) > -1) {
                            found = true;
                            break;
                        }
                    }
                }
                
                rows[i].style.display = found ? '' : 'none';
            }
        }
        
        // Trigger search on "Enter" key
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                filterTable();
            }
        });
        
        // Live search as you type
        document.getElementById('searchInput').addEventListener('input', function() {
            filterTable();
        });
    </script>
</body>
</html>